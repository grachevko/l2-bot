{
    "declaration": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "removeComments": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
//    "paths": {"*": ["./node_modules/l2js-client/"]},
    "include": ["src"]
}
